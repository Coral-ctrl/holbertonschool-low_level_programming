/**
 * op_add - gets the sum of a and b
 * @a: the first interger
 * @b: the second integer
 *
 * Return: sum of a and b
 */
int op_add(int a, int b)
{
	return (a + b);
}

/**
 * op_sub - gets the difference of a and b
 * @a: the first interger
 * @b: the second integer
 *
 * Return: difference of a and b
 */
int op_sub(int a, int b)
{
	return (abs(a - b));
}

/**
 * op_mul - gets the product of a and b
 * @a: the first interger
 * @b: the second integer
 *
 * Return: the product of a and b
 */
int op_mul(int a, int b)
{
	return (a * b);
}

/**
 * op_div - gets the result of the division of a and b
 * @a: the first interger
 * @b: the second integer
 *
 * Return: the result of the division of a and b
 */
int op_div(int a, int b)
{
	return (a / b);
}

/**
 * op_mod - gets the remainder of the division of a by b
 * @a: the first interger
 * @b: the second integer
 *
 * Return: the remainder of the division of a by b
 */
int op_mod(int a, int b)
{
	return (a % b);
}
